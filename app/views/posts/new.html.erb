<%= form_with(model: @post, local: true) do |form| %>
  <%= form.label :caption %>
  <%= form.text_field :caption, class: "form-control" %>
  
  <%= form.fields_for :photos do |photo_fields| %>
    <%= photo_fields.file_field :image %>
  <% end %>
  
  <%= form.submit "投稿", class: "btn btn-primary mt-3" %>
<% end %>
